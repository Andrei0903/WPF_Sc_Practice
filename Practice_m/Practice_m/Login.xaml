<Page x:Class="Practice_m.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practice_m"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid Background="#ffdadada">
        <Border MinWidth="400" Margin="15" MaxWidth="800"  Background="#fff" VerticalAlignment="Center" CornerRadius="20" Padding="40" >
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Авторизация пользователя " FontSize="40" FontWeight="Bold" Margin="0 0 0 20"></TextBlock>
                <Grid Margin="0 0 0 20">
                    <Button HorizontalAlignment="Left" Content="Регистрация"/>
                    <Button HorizontalAlignment="Right" Content="Войти"/>
                </Grid>
                <TextBox Text="Введите логин" ></TextBox>
                <PasswordBox PasswordChar=";"></PasswordBox>
                
            </StackPanel>
        </Border>
    </Grid>
</Page>
